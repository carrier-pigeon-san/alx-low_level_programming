SHELL := /bin/bash

.PHONY: all clean oclean fclean re

CC = gcc

SRC = main.c school.c

OBJ = $(SRC:%.c=%.o)

NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	rm -f *~ school

oclean:
	rm -f *.o

fclean:
	rm -f *~ school
	rm -f *.o

re:
	rm -f main.o school.o
	make all -f 3-Makefile
