SHELL := /bin/bash

.PHONY: all clean oclean fclean re

CC = gcc

SRC = main.c school.c

OBJ = $(SRC:%.c=%.o)

NAME = school

RM = rm

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@

%.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) -f *~ school

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f *~ school
	$(RM) -f $(OBJ)

re:
	$(RM) -f $(OBJ)
	make all -f 3-Makefile
