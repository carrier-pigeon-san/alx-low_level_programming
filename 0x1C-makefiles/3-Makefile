SHELL := /bin/bash

.PHONY: all clean oclean fclean re

CC = gcc

SRC = main.c school.c

OBJ = $(SRC:%.c=%.o)

NAME = school

RM = rm

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) -f *~ school

oclean:
	$(RM) -f *.o

fclean:
	$(RM) -f *~ school
	$(RM) -f main.o school.o

re:
	$(RM) -f main.o school.o
	make all -f 3-Makefile
